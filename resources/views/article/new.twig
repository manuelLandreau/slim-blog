{% extends "layout.twig" %}

{% block title %}SLIM Blog - New Article{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ base_url() }}{{ prefix }}/css/trumbowyg.min.css">
    <link rel="stylesheet" type="text/css" href="{{ base_url() }}{{ prefix }}/css/article/article.css">
{% endblock %}

{% block sidemenu %}
    <ul class="nav nav-pills nav-stacked">
        <li><a href="{{ path_for('home') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to the list</a></li>
    </ul>
{% endblock %}

{% block body %}
    <form action="{{ path_for('article.create') }}" method="post">
        <input type="hidden" name="{{csrf.nameKey}}" value="{{csrf.name}}">
        <input type="hidden" name="{{csrf.valueKey}}" value="{{csrf.value}}">
        <div class="form-group">
            <label for="title">Title</label>
            <input id="title" class="form-control" type="text" name="title"/>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" class="form-control" rows="5" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea id="content" class="form-control" rows="5" name="content"></textarea>
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <input id="slug" class="form-control" type="text" name="slug"/>
        </div>
        <div class="text-right mb20px">
            <button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-ok"></span> Submit</button>
        </div>
    </form>
{% endblock %}

{% block javascript %}
    <script src="{{ base_url() }}{{ prefix }}/js/trumbowyg.min.js"></script>
    <script>
        $(function () {
            $('#content').trumbowyg({
                svgPath: '{{ base_url() }}{{ prefix }}/css/icons.svg'
            });
        });
    </script>
{% endblock %}