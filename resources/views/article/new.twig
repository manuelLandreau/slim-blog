{% extends "layout.twig" %}

{% block title %}SLIM Blog - New Article{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ prefix }}/css/trumbowyg.min.css">
    <link rel="stylesheet" type="text/css" href="{{ prefix }}/css/article/article.css">
{% endblock %}

{% block sidemenu %}
    <ul class="nav nav-pills nav-stacked">
        <li><a href="{{ path_for('home') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to the list</a></li>
    </ul>
{% endblock %}

{% block body %}
    <form action="{{ path_for('article.create') }}" method="post">
        <input type="hidden" name="{{csrf.nameKey}}" value="{{csrf.name}}">
        <input type="hidden" name="{{csrf.valueKey}}" value="{{csrf.value}}">
        <div class="form-group">
            <label for="asin">Numero ASIN</label>
            <input id="asin" class="form-control" type="text" name="asin" />
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <input id="slug" class="form-control" type="text" name="slug" />
        </div>
        <div class="text-right mb20px">
            <button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-ok"></span> Submit</button>
        </div>
    </form>
{% endblock %}

{% block javascript %}
    <script src="{{ prefix }}/js/trumbowyg.min.js"></script>
    <script>
        $(function () {
            $('#content').trumbowyg({
                svgPath: '{{ prefix }}/css/icons.svg'
            });
        });
    </script>
{% endblock %}