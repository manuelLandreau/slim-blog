{
    "name": "slim-blog",
    "description": "Simple slim skeleton using php-di bridge, doctrine ORM and twig views",
    "type": "project",
    "require": {
        "php": ">=7.1.0",
        "slim/slim": "^3.4",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "v2.5.9",
        "php-di/slim-bridge": "^1.0",
        "slim/twig-view": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "repositories": [
        {
            "type": "github",
            "url":  "https://github.com/manuellandreau/slim-blog.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public public/index.php",
        "test": "phpunit",
        "cs": "phpcs --standard=PSR2 src/",
        "cbf": "phpcbf --standard=PSR2 src/"
    }
}
