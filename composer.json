{
    "name": "slim-blog",
    "description": "Simple slim skeleton using php-di bridge, doctrine ORM and twig views",
    "type": "project",
    "require": {
        "slim/slim": "^3.4",
        "doctrine/orm": "v2.5.9",
        "php-di/slim-bridge": "^1.0",
        "slim/twig-view": "^2.2",
        "slim/views": "^0.1.3",
        "slim/csrf": "^0.8.1",
        "tuupola/slim-basic-auth": "^2.2",
        "pagerange/flash": "@alpha",
        "tuupola/cors-middleware": "^0.5.2",
        "vlucas/phpdotenv": "^2.4",
        "fxp/composer-asset-plugin": "~1.3",
        "npm-asset/bootstrap-sass": "^3.3.7",
        "npm-asset/gulp": "^3.9.1",
        "npm-asset/gulp-concat": "^2.6.1",
        "npm-asset/gulp-rename": "^1.2.2",
        "npm-asset/gulp-sass": "^3.1.0",
        "npm-asset/knacss": "^6.1.2",
        "npm-asset/shufflejs": "^5.0.2",
        "npm-asset/trumbowyg": "^2.8.0"
},
    "require-dev": {
        "monolog/monolog": "^1.17",
        "phpunit/phpunit": ">=4.8 < 6.0",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/var-dumper": "^3.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/pagerange/flash.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Test\\": "test"
        }
    },
    "scripts": {
        "start": "php -S localhost:8888 -t public public/index.php",
        "test": "phpunit",
        "cs": "phpcs --standard=PSR2 src/",
        "cbf": "phpcbf --standard=PSR2 src/"
    }
}
